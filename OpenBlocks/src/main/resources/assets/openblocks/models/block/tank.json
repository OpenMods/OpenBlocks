        "tn := edgeB(n_t, n_n, n_tn)",

        "ne := edgeT(n_n, n_e, n_ne)",
        "nw := edgeT(n_n, n_w, n_nw)",
        "se := edgeB(n_s, n_e, n_se)",
        "sw := edgeB(n_s, n_w, n_sw)",

        "be := edgeT(n_b, n_e, n_be)",
        "bw := edgeT(n_b, n_w, n_bw)",
        "te := edgeB(n_t, n_e, n_te)",
        "tw := edgeB(n_t, n_w, n_tw)"
    ],
    "variants": {
